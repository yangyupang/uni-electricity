.pay-container {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f4f4f4;
}
.pay-container .pay-address {
    height: 160rpx;
}
.pay-container .pay-info {
    margin: 20rpx 0;
    background: white;
    overflow: hidden;
}
.pay-container .pay-info .info-each {
      padding: 30rpx 0;
      margin: 0 30rpx;
}
.pay-container .bottom-box {
    position: absolute;
    width: 100%;
    bottom: 0;
    height: 100rpx;
    background: white;
}
.pay-container .bottom-box .bottom-checkbox {
      margin-left: 20rpx;
}
.pay-container .bottom-box .bottom-price {
      margin-right: 30rpx;
      color: #ab212c;
}
.pay-container .bottom-box .bottom-btn {
      width: 200rpx;
      height: 100rpx;
      color: white;
      background: #ab212c;
      font-size: 30rpx;
      line-height: 100rpx;
}

