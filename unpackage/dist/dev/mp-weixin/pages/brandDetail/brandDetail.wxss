  width: 100%;
  height: 100%;
}
.brand-top {
  width: 100%;
  height: 280rpx;
}
.brand-title {
  z-index: 1;
  font-size: 40rpx;
  color: white;
  border-bottom: 4rpx solid white;
  margin: 0 auto;
}
.brand-pic {
  width: 100%;
  height: 280rpx;
}
.brand-info {
  margin: 100rpx 0;
  width: 100%;
  color: gray;
  font-size: 32rpx;
}
.goods-box > view {
